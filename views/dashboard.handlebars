{{#each posts as |post|}}
<section class="card" id="card-{{id}}">
    <div class="card-header display-flex justify-space-between">
        <h3><a href="javascript:void(0)" class="edit_post" data-id={{id}}>{{title}}</a></h3>
        <span>{{format_date date_created}}</span>
    </div>
    <div class="card-body hidden">
        <form class="form edit-post-form">
            <div class="form-group">
              <label for="title">Title</label>
              <input class="form-input" type="text" id="title-{{id}}" name="title" value="{{title}}" />
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <textarea class="form-input" id="content-{{id}}" name="content">{{content}}</textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary w-100 edit-post-btn">Update</button>
            </div>
            <div class="form-group">
              <button type="button" class="btn btn-primary w-100 delete-post-btn" data-id="{{id}}">Delete</button>
            </div>
            <input class="hidden" type="text" id="post_id-{{id}}" name="post_id" value="{{id}}" />
        </form>
    </div>
</section>
{{/each}}

<button type="button" class="btn btn-primary" id="add-post-btn">+ New Post</button>

<section class="hidden card" id="post-form">
    <div class="card-header">
        <h3>Create New Post</h3>
    </div>
    <div class="card-body">
        <form class="form new-post-form">
            <div class="form-group">
              <label for="title">Title</label>
              <input class="form-input" type="text" id="title" name="title" />
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <textarea class="form-input" id="content" name="content"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary w-100">Create</button>
            </div>
        </form>
    </div>
</section>


<script src="/js/post.js"></script>
